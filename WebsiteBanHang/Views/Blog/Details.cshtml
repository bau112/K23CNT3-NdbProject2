@model WebsiteBanHang.Models.BlogPost

@{
    ViewData["Title"] = @Model.Title;
}

<div class="container mt-4">
    <h2>@Model.Title</h2>
    <p class="text-muted">@Model.CreatedAt.ToString("10/10/2025")</p>
    <img src="~/images/@Model.Image" class="img-fluid mb-4 rounded shadow" alt="@Model.Title">
    <p>@Model.Content</p>
    <a href="/Blog/Index" class="btn btn-secondary mt-3">← Quay lại</a>
</div>
