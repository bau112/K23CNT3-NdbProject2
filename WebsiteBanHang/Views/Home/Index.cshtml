@model IEnumerable<WebsiteBanHang.Models.Product>
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Banner -->
<div class="container mt-4">
    <div class="row">
        <div class="col-12">

            <img src="~/images/poster1.jpg" class="banner-img w-100" alt="Banner" />
        </div>
    </div>
</div>

<!-- Sản phẩm nổi bật -->
<div class="container mt-4">
    <h4 class="mb-4">Sản phẩm nổi bật</h4>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card product-card">
                    <div class="product-image">
                        <img src="~/images/@item.Image" alt="@item.Name" />
                        <div class="overlay">
                            <span class="overlay-text">Xem chi tiết</span>
                        </div>
                    </div>
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="price">
                            <span class="gia-cu">@item.Price.ToString("N0")đ</span>
                            <span class="gia-moi">@item.NewPrice.ToString("N0")đ</span>
                        </p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="btn btn-custom">
                            <i class="fas fa-info-circle"></i> Chi tiết sản phẩm
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
