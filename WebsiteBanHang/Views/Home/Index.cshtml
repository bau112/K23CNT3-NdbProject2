@model IEnumerable<WebsiteBanHang.Models.Product>
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Banner slideshow -->
<div id="bannerCarousel" class="carousel slide mb-4" data-bs-ride="carousel" data-bs-interval="3500">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/poster1.jpg" class="d-block w-100 banner-img" alt="Banner 1">
        </div>
        <div class="carousel-item">
            <img src="~/images/poster3.jpg" class="d-block w-100 banner-img" alt="Banner 2">
        </div>
        <div class="carousel-item">
            <img src="~/images/qcadr.jpg" class="d-block w-100 banner-img" alt="Banner 3">
        </div>
        <div class="carousel-item">
            <img src="~/images/poster2.jpg" class="d-block w-100 banner-img" alt="Banner 4">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Bộ lọc sắp xếp -->
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Tất cả sản phẩm</h4>
        <form method="get" asp-controller="Home" asp-action="Index" class="d-flex">
            <select name="sortOrder" class="form-select" onchange="this.form.submit()">
                <option value="">-- Sắp xếp --</option>
                <option value="price_asc" selected="@(ViewBag.SortOrder == "price_asc")">Giá thấp → cao</option>
                <option value="price_desc" selected="@(ViewBag.SortOrder == "price_desc")">Giá cao → thấp</option>
            </select>
        </form>
    </div>

    <!-- Danh sách sản phẩm -->
    @if (Model == null || !Model.Any())
    {
        <p>Không có sản phẩm nào.</p>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card product-card h-100">
                        <div class="product-image">
                            <img src="~/images/@product.Image" class="card-img-top" alt="@product.Name" />
                        </div>
                        <div class="card-body text-center d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="price">
                                <span class="gia-cu">@product.Price.ToString("N0") đ</span>
                                <span class="gia-moi">@product.NewPrice.ToString("N0") đ</span>
                            </p>
                            <p class="text-muted small">@product.Description</p>

                            <!-- Nút chi tiết sản phẩm -->
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"
                               class="btn btn-custom mt-auto">
                                <i class="fas fa-info-circle"></i> Chi tiết sản phẩm
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
