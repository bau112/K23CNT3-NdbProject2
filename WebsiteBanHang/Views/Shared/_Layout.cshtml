@using Microsoft.AspNetCore.Http
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebsiteBanHang</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-orange">
            <div class="container-fluid d-flex align-items-center">

                <!-- Logo -->
                <a class="navbar-brand text-white fw-bold me-4" asp-controller="Home" asp-action="Index">
                    WebsiteBanHang
                </a>

                <!-- Menu icon + text -->
                <ul class="navbar-nav me-auto d-flex flex-row align-items-center">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                            <i class="fa fa-house"></i>
                            <div>Trang chủ</div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Product" asp-action="Phone">
                            <i class="fa fa-mobile-screen-button"></i>
                            <div>Điện thoại</div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Product" asp-action="Laptop">
                            <i class="fa fa-laptop-code"></i>
                            <div>Laptop</div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Product" asp-action="Accessory">
                            <i class="fa fa-headphones"></i>
                            <div>Phụ kiện</div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Service" asp-action="Repair">
                            <i class="fa fa-screwdriver-wrench"></i>
                            <div>Sửa chữa</div>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Blog" asp-action="Index">
                            <i class="fa fa-newspaper"></i>
                            <div>Tin tức</div>
                        </a>
                    </li>
                </ul>

                <!-- Thanh tìm kiếm -->
                <form class="d-flex search-form mx-3 flex-grow-1" role="search" method="get" action="/Product/Index">
                    <input name="q" class="form-control me-2" type="search" placeholder="Tìm kiếm sản phẩm..." />
                    <button class="btn btn-custom" type="submit"><i class="fa fa-search"></i></button>
                </form>

                <!-- Tài khoản -->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="acctDrop"
                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-user"></i>
                            <div>Tài khoản</div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="acctDrop">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Đăng nhập</a></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Register">Đăng ký</a></li>
                        </ul>
                    </li>
                </ul>

            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 mt-5">
        <p class="mb-0">&copy; @DateTime.Now.Year - WebsiteBanHang</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
