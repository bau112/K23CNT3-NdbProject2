@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebsiteBanHang</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-orange">
        <div class="container">
            <!-- Logo chữ -->
            <a class="navbar-brand fw-bold text-white" href="/">WebsiteBanHang</a>

            <!-- Nút thu gọn mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <!-- Menu chính -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-home"></i><span>Trang chủ</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Product/Phone"><i class="fas fa-mobile-alt"></i><span>Điện thoại</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Product/Laptop"><i class="fas fa-laptop"></i><span>Laptop</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Product/Accessory"><i class="fas fa-headphones"></i><span>Phụ kiện</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fas fa-tools"></i><span>Sửa chữa</span></a>
                    </li>
                </ul>


                <!-- Thanh tìm kiếm -->
                <form class="d-flex me-3 search-form">
                    <input class="form-control" type="search" placeholder="Tìm kiếm sản phẩm..." aria-label="Search">
                    <button class="btn btn-light ms-2" type="submit"><i class="fas fa-search"></i></button>
                </form>

                <!-- Tài khoản -->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex flex-column align-items-center"
                           href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user"></i>
                            <span>Tài khoản</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                            <li><a class="dropdown-item" href="/Account/Login">Đăng nhập</a></li>
                            <li><a class="dropdown-item" href="/Account/Register">Đăng ký</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Banner -->
    <div id="bannerCarousel" class="carousel slide container mt-3" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/poster1.jpg" class="d-block w-100" alt="Banner 1">
            </div>
            <div class="carousel-item">
                <img src="~/images/poster2.jpg" class="d-block w-100" alt="Banner 2">
            </div>
            <div class="carousel-item">
                <img src="~/images/poster3.jpg" class="d-block w-100" alt="Banner 3">
            </div>
            <div class="carousel-item">
                <img src="~/images/qcadr.jpg" class="d-block w-100" alt="Banner 3">
            </div>
        </div>
    </div>

    <!-- Nội dung chính -->
    <main role="main" class="container my-4">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
