<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebsiteBanHang</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top shadow-sm" style="background-color:#ff6600;">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">WebsiteBanHang</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 gap-2">
                    <li class="nav-item"><a class="nav-link text-white" href="#">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Điện thoại</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Laptop</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Phụ kiện</a></li>
                    <li class="nav-item"><a class="nav-link text-white" href="#">Sửa chữa</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-3 mb-5">
        @RenderBody()
    </main>

    <footer class="text-white text-center py-2" style="background-color:#ff6600;">
        © 2025 WebsiteBanHang
    </footer>

    <nav class="bottom-nav" role="navigation" aria-label="Bottom Navigation">
        <a href="/" class="nav-item" data-key="home">
            <i class="bi bi-house"></i><span>Trang chủ</span>
        </a>
        <a href="/dien-thoai" class="nav-item" data-key="phone">
            <i class="bi bi-phone"></i><span>Điện thoại</span>
        </a>
        <a href="/laptop" class="nav-item" data-key="laptop">
            <i class="bi bi-laptop"></i><span>Laptop</span>
        </a>
        <a href="/cart" class="nav-item" data-key="cart">
            <i class="bi bi-cart"></i><span>Giỏ hàng</span>
        </a>
        <a href="/account" class="nav-item" data-key="account">
            <i class="bi bi-person"></i><span>Tài khoản</span>
        </a>
    </nav>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function() {
            try {
                var path = location.pathname.toLowerCase();
                var map = {
                    "/": "home",
                    "/home": "home",
                    "/index": "home",
                    "/dien-thoai": "phone",
                    "/laptop": "laptop",
                    "/cart": "cart",
                    "/account": "account"
                };
                var key = map[path] || (path.startsWith("/dien-thoai") ? "phone" : (path.startsWith("/laptop") ? "laptop" : null));
                var items = document.querySelectorAll('.bottom-nav .nav-item');
                items.forEach(function(it) { it.classList.remove('active'); });
                if (key) {
                    var el = document.querySelector('.bottom-nav .nav-item[data-key="' + key + '"]');
                    if (el) el.classList.add('active');
                } else {
                    document.querySelector('.bottom-nav .nav-item[data-key="home"]').classList.add('active');
                }
            } catch (e) {}
        })();
    </script>
</body>
</html>
