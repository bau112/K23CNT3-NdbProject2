@model List<WebsiteBanHang.Models.CartItem>
@{
    ViewData["Title"] = "Thanh toán";
    Layout = "_Layout";
}
<h3>Thanh toán</h3>

@if (!Model.Any())
{
    <div class="alert alert-info">Giỏ hàng rỗng. <a asp-controller="Product" asp-action="Index">Tiếp tục mua</a></div>
}
else
{
    <form asp-controller="Checkout" asp-action="PlaceOrder" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3"><label>Họ tên</label><input name="name" class="form-control" required /></div>
                <div class="mb-3"><label>Số điện thoại</label><input name="phone" class="form-control" required /></div>
                <div class="mb-3"><label>Địa chỉ</label><textarea name="address" class="form-control" required></textarea></div>
                <div class="mb-3">
                    <label>Phương thức</label>
                    <select name="payment" class="form-select"><option>COD</option><option>Chuyển khoản</option></select>
                </div>
                <button class="btn btn-primary">Xác nhận đơn</button>
            </div>
            <div class="col-md-6">
                <h5>Đơn hàng</h5>
                <ul class="list-group mb-3">
                    @foreach (var it in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <div>@it.Name <small class="text-muted">x@it.Quantity</small></div>
                            <div>@String.Format("{0:N0}", it.Price * it.Quantity) đ</div>
                        </li>
                    }
                </ul>
                <h4>Tổng: @String.Format("{0:N0}", Model.Sum(i => i.Price * i.Quantity)) đ</h4>
            </div>
        </div>
    </form>
}
