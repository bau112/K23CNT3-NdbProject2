@model IEnumerable<WebsiteBanHang.Models.Product>
@{
    ViewData["Title"] = "Sản phẩm";
}

<div class="container mt-4">
    <h4 class="mb-4">Danh sách sản phẩm</h4>

    @if (Model == null || !Model.Any())
    {
        <p>Không có sản phẩm nào.</p>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card product-card h-100">
                        <div class="product-image">
                            <img src="~/images/@product.Image" class="card-img-top" alt="@product.Name" />
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="price">
                                <span class="gia-cu">@product.Price.ToString("N0") đ</span>
                                <span class="gia-moi">@product.NewPrice.ToString("N0") đ</span>
                            </p>
                            <p class="text-muted small">@product.Description</p>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-custom">
                                <i class="fas fa-info-circle"></i> Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
