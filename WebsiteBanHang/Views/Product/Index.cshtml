@model List<WebsiteBanHang.Models.Product>
@{
    ViewData["Title"] = "Sản phẩm";
    Layout = "_Layout";
}

<h2 class="mb-4 text-center">Sản phẩm</h2>

<div class="product-grid">
    @foreach (var product in Model)
    {
        <div class="product-card">
            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">
                <div class="product-image">
                    <img src="~/images/@product.Image" alt="@product.Name" />
                    <div class="overlay">
                        <div class="overlay-text">@product.Name - @String.Format("{0:N0}", product.NewPrice) đ</div>
                    </div>
                </div>
            </a>
            <div class="p-3 text-center">
                <h6 class="mb-2">@product.Name</h6>
                <p class="mb-2"><del class="text-muted">@String.Format("{0:N0}", product.OldPrice) đ</del> <span class="text-danger fw-bold">@String.Format("{0:N0}", product.NewPrice) đ</span></p>
                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-custom">
                    <i class="fas fa-info-circle"></i> Chi tiết sản phẩm
                </a>
            </div>
        </div>
    }
</div>
