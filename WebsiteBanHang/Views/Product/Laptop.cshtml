@{
    ViewData["Title"] = "Laptop";
}

<div class="container mt-4">
    <h4 class="mb-4">Laptop</h4>
    <div class="row">
        <!-- MacBook Pro -->
        <div class="col-md-3 mb-4">
            <div class="card product-card">
                <div class="card-img-wrapper">
                    <img src="~/images/macbook.webp" class="card-img-top" alt="MacBook Pro">
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">MacBook Pro</h5>
                    <p class="price">
                        <span class="gia-cu">45.000.000đ</span>
                        <span class="gia-moi">39.990.000đ</span>
                    </p>
                    <a href="/Product/Details/3" class="btn btn-custom">
                        <i class="fas fa-info-circle"></i> Chi tiết sản phẩm
                    </a>
                </div>
            </div>
        </div>

        <!-- Dell XPS -->
        <div class="col-md-3 mb-4">
            <div class="card product-card">
                <div class="card-img-wrapper">
                    <img src="~/images/dellxps.jpg" class="card-img-top" alt="Dell XPS">
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">Dell XPS</h5>
                    <p class="price">
                        <span class="gia-cu">35.000.000đ</span>
                        <span class="gia-moi">29.990.000đ</span>
                    </p>
                    <a href="/Product/Details/4" class="btn btn-custom">
                        <i class="fas fa-info-circle"></i> Chi tiết sản phẩm
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
