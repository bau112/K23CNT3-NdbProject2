@model WebsiteBanHang.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <img src="~/images/@Model.Image" alt="@Model.Name" class="img-fluid rounded shadow" />
        </div>

        <div class="col-md-7">
            <h2>@Model.Name</h2>
            <p class="text-muted">@Model.Description</p>

            <p class="price mt-3">
                <span class="gia-cu">@Model.Price.ToString("N0") đ</span>
                <span class="gia-moi">@Model.NewPrice.ToString("N0") đ</span>
            </p>

            <div class="mt-4 d-flex gap-2 flex-wrap">
                <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-custom">
                    <i class="fa fa-cart-plus"></i> Thêm vào giỏ hàng
                </a>

                <a href="#" class="btn btn-success">
                    <i class="fa fa-bolt"></i> Mua ngay
                </a>

                <a href="#" class="btn btn-primary">
                    <i class="fa fa-credit-card"></i> Trả góp 0% lãi suất
                </a>

                <a href="@ViewBag.ReturnUrl" class="btn btn-outline-secondary">
                    <i class="fa fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
