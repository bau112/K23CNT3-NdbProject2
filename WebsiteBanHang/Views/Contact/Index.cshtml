@{
    ViewData["Title"] = "Liên hệ";
    Layout = "_Layout";
}

<h3>Liên hệ</h3>

@if (TempData["ContactMsg"] != null)
{
    <div class="alert alert-success">@TempData["ContactMsg"]</div>
}

<form method="post" asp-action="Send">
    <div class="mb-3">
        <input name="name" class="form-control" placeholder="Họ tên" />
    </div>
    <div class="mb-3">
        <input name="email" class="form-control" placeholder="Email" />
    </div>
    <div class="mb-3">
        <textarea name="message" class="form-control" placeholder="Nội dung"></textarea>
    </div>
    <button class="btn btn-primary">Gửi</button>
</form>

<div class="mt-4">
    <h5>Địa chỉ cửa hàng</h5>
    <p>123 Đường ABC, Quận 1, TP.HCM</p>

    <!-- Container iframe với CSS để responsive -->
    <div style="position: relative; width: 100%; height: 300px;">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18...(replace with real embed)"
                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border:0;"
                allowfullscreen
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
        </iframe>
    </div>
</div>
